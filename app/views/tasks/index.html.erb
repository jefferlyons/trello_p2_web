<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>
  <h2>Task Completed</h2>
  <div>
  <table class="Cflase">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Duration</th>
    
        <th>Endtime</th>
  
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody >
        <% @tasks.where(check: true).each do |task|  %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.duration %></td>
      
          <td><%= task.endtime %></td>
         
          <th><%= @users.where(["id = ?",task.user_id]).first.email%></th>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <div>
    <h2>Task in Progress</h2>
